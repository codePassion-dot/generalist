# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t api-rest`.
FROM docker.io/node:lts-alpine

# ENV HOST=0.0.0.0
# ENV PORT=3000

WORKDIR /app

RUN addgroup --system api-rest && \
          adduser --system -G api-rest api-rest

COPY dist/apps/api-rest api-rest
RUN chown -R api-rest:api-rest .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix api-rest --omit=dev -f install

CMD [ "node", "api-rest" ]
