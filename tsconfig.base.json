{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@generalist/api-rest/auth": ["libs/api-rest/auth/src/index.ts"],
      "@generalist/api-rest/env": ["libs/api-rest/env/src/index.ts"],
      "@generalist/api-rest/shared-types": [
        "libs/api-rest/shared-types/src/index.ts"
      ],
      "@generalist/connect-four/game-board": [
        "libs/connect-four/game-board/src/index.ts"
      ],
      "@generalist/connect-four/ui": ["libs/connect-four/ui/src/index.ts"],
      "@generalist/db": ["libs/db/src/index.ts"],
      "@generalist/mailer": ["libs/mailer/src/index.ts"],
      "@generalist/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
